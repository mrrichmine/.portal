{
  "compilerOptions": {

    "target": "es5",
    "module": "es2015",

    "lib": ["es6", "dom"],

    "moduleResolution": "node",

    "declaration": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true

  },
  "exclude": [

    "node_modules"

  ],
  "files": [

    "src/app/app.module.ts",
    "src/main.ts"

  ],
  "angularCompilerOptions": {

    "genDir": "aot",
    "skipMetadataEmit" : true

  }
}